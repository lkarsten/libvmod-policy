varnishtest "Test policy vmod"

server s1 {
       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
	import policy from "${vmod_topbuild}/src/.libs/libvmod_policy.so";
	import std;
	sub vcl_deliver {
		set resp.http.hello = policy.check("127.0.0.1", "15696");
		# std.log("res is: " + req.http.hello);
	}
} -start

client c1 {
	txreq -url "/"
	rxresp
	expect resp.http.hello == "0"
 # NO"
}

client c1 -run
